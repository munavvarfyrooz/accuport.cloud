# Accuport Environment Variables Template
# Copy this file to .env and fill in your values
# For Railway: Set these in the Railway dashboard under Variables

# REQUIRED: Flask Secret Key
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# REQUIRED: Labcom API Tokens (per vessel)
VESSEL_TOKEN_MV_OCTOBER=your-token-here
VESSEL_TOKEN_MV_RACER=your-token-here
VESSEL_TOKEN_MT_AQUA=your-token-here
VESSEL_TOKEN_MT_VOYAGER=your-token-here
VESSEL_TOKEN_MV_ACE=your-token-here
VESSEL_TOKEN_MV_EYRA=your-token-here
VESSEL_TOKEN_MV_ALMAHFOZA=your-token-here
VESSEL_TOKEN_MV_QUEEN_MARY=your-token-here

# OPTIONAL: Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# OPTIONAL: Production settings
FLASK_ENV=production
FLASK_DEBUG=false
